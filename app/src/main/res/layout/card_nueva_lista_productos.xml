<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productoImageView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/zucaritas"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/nombreProductoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zucaritas Kellogs"
                android:textSize="18sp"
                android:fontFamily="@font/blinker_semibold" />

            <TextView
                android:id="@+id/detalleContenidoProductotextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 gr"
                android:fontFamily="@font/blinker_regular"/>

            <TextView
                android:id="@+id/tipoProductotextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cereal"
                android:fontFamily="@font/blinker_light"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decrementarButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/icono_menos" />

            <TextView
                android:id="@+id/cantidadProductoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="1"
                android:fontFamily="@font/blinker_regular"
                android:textColor="#878181"
                android:textSize="45sp" />

            <ImageView
                android:id="@+id/incrementarButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/icono_mas" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
